/* DriverLib Includes */
#include "driverlib.h"

/* Standard Includes */
#include <stdint.h>

/* Project Includes */
#include "PWM.h"
#include "Clock.h"
#include "Motor.h"
#include "Launchpad.h"


uint8_t data;

int main(void)  {

    // Stop watchdog timer
    WDT_A_holdTimer();

    // Call Appropriate Initializations
    Clock_Init();
    LaunchPad_Init();
    PWM_Init(1, 0, 0);
    Motor_Init();

    // Continuously Check SW1 and SW2 and set Duty Cycle According to their value
    while(1){
        data = LaunchPad_Input();

        if (data == 0) {
            Motor_Stop();
        }
        else if (data == 1) {
            Motor_Right(5, 5);
        }
        else if (data == 2) {
            Motor_Left(5, 5);
        }
        else if (data == 3) {
            Motor_Forward(5, 5);
        }
    }
}
